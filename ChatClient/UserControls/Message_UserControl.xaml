<UserControl x:Class="ChatClient.UserControls.Message_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatClient.UserControls"
             mc:Ignorable="d" Margin="0 2 0 2" MaxWidth="300">
    <Grid>
        <Border Background="#1E2435" CornerRadius="5" Name="Border_main"/>

        <StackPanel Margin="10">
            <TextBlock Name="txt_Username" Text="Armando" Foreground="White" FontWeight="Black" HorizontalAlignment="Left" FontFamily="Consolas" FontSize="12"/>
            <TextBlock Name="txt_Message" Text="Message" Foreground="White" HorizontalAlignment="Left" TextWrapping="Wrap" FontFamily="Consolas" FontWeight="Normal" FontSize="14"/>
        </StackPanel>
        
    </Grid>
</UserControl>
